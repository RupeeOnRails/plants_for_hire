$('#detail').fadeOut(100);
window.setTimeout(function(){
  $('.flash').html('');
  // clear board
  $('.location').removeClass('player');
  // add player with updated location
  $('.location[data-id=<%= @player.location.id %>]').addClass('player');

  // update_detail
  $('#detail').html("<%= j render partial: 'map/detail' %>");
  
  $('#detail').fadeIn('fast');
}, 100);
