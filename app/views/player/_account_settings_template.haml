%template.account_settings
  %header
    %i.material-icons person
    .title Account
    = content_tag :a, nil, class: 'close_light_window' do
      %i.material-icons clear
  .body
    %p
      %strong Email:
      = @player.email
    %p
      %strong Last login:
      = time_ago_in_words @player.last_sign_in_at
      ago
  %footer
    = link_to 'Edit Account', edit_player_registration_path
    = link_to 'Log Out', destroy_player_session_path, method: :delete
